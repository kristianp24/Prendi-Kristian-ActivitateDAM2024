<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/formular"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/nume"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/numeText"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="@string/hint_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/grupa"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/grupaText"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="@string/hint_grupa"
            android:inputType="numberDecimal"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/integralist"
            android:textSize="20sp"/>

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/check_da"/>

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/check_nu"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/anul"
            android:textSize="20sp"/>

        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="100dp" >

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/check_da"/>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/check_nu"/>

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

       <TextView
           android:layout_width="200dp"
           android:layout_height="50sp"
           android:text="@string/sexul"
           android:textSize="20sp"
           />

        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="100dp">

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/Masculin"/>

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/Feminin"/>

        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="abonata"
        android:text="@string/abonat" />


</LinearLayout>